{
    "manifest_version": 2,
    "name": "Glastotabs",
    "version": "1.0",
    "description": "Click the button to spawn N (default 5) container tabs at a given URL (default https://glastonbury.seetickets.com). Configure N and URL in Options.",
    "permissions": [
      "contextualIdentities",
      "tabs",
      "storage",
      "cookies",
      "<all_urls>"
    ],
    "icons": {
      "32": "icons/icon-32.png"
    },
    "browser_action": {
      "default_icon": {
        "32": "icons/icon-32.png"
      },
      "default_title": "Spawn container tabs"
    },
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    },
    "background": {
      "scripts": ["background.js"]
    }
  }